
@model IEnumerable<AIM.Service.Entities.Models.Question>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="@Url.Content("~/Content/toastr.css")"/>

<!-- This view's content starts HERE-->
<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a><span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Action("Index", "Question")">Questions</a>
        </li>
    </ul>
</div>

<div>
    <a class="btn btn-success" href="@Url.Action("Create", "Question")">
        <i class="icon-plus icon-white"></i><i class="icon-briefcase icon-white"></i>
        Create New
    </a>
</div>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-briefcase"></i> JOBS</h2>
            <div class="box-icon">
                @*<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>*@
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>

        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            Question Type
                        </th>
                        <th>
                            Question
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        <tr data-bind="foreach: item">
                            <td class="center-block" data-bind="text: questionID"></td>
                            <td class="center-block">
                                <div data-bind="visible: !isEditing()">
                                    <label data-bind="text: qJsonProperties, click: $parent.edit"></label>
                                    <a href="#" data-bind="click: $parent.removeItem">X</a>
                                </div>
                                <div data-bind="visible: isEditing">
                                    <form data-bind="event: { submit: $parent.completeEdit }">
                                        <input type="text" data-bind="value: qJsonProperties, hasfocus: isEditing" />
                                    </form>
                                </div>
                            </td>
                            <td class="center-block">
                            </td>
                            <td class="center-block">
                            </td>
                            <td class="center-block">
                                <div>
                                    <a class="btn btn-success" href="">
                                        <i class="icon-zoom-in icon-white"></i>
                                        Edit
                                    </a>
                                </div>
                            </td>
                            <td class="center-block">
                                <div>
                                    <a class="btn btn-info" href="">
                                        <i class="icon-edit icon-white"></i>
                                        Details
                                    </a>
                                </div>
                            </td>
                            <td class="center-block">
                                <div>
                                    <a class="btn btn-danger" href="">
                                        <i class="icon-trash icon-white"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
            </table>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<!-- 3rd party libraries -->
<script type="text/javascript" src="@Url.Content("~/Scripts/knockout-3.1.0.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/q.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/breeze.debug.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/toastr.js")"></script>

<!-- App libraries -->
<script>app = {};</script>
<script type="text/javascript" src="@Url.Content("~/ViewModels/QuestionViewModel/logger.js")"></script>
<script type="text/javascript" src="@Url.Content("~/ViewModels/QuestionViewModel/questionViewModel.js")"></script>
<script type="text/javascript" src="@Url.Content("~/ViewModels/QuestionViewModel/questionDataService.js")"></script>