@model IEnumerable<AIM.Application.Service.Entities.Models.OpenJob>

@{
    ViewBag.Title = "Job Openings";
}

<h2>Job Openings in @ViewBag.Message</h2>

<table class="table">
    <tr>
        <th></th> <!-- Column for details button -->
        <th>
            @Html.DisplayNameFor(model => model.Job.position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region.regionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Store.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>
            <a class="btn btn-info" href="@Url.Action("Details", "OpenJob", new { id = item.openJobsId })">
                <i class="icon-edit icon-white"></i>
                Details
            </a>
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Job.position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region.regionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Store.name)
        </td>
    </tr>
}

</table>
