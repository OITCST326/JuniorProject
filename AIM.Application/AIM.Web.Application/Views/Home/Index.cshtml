@model IEnumerable<AIM.Application.Service.Entities.Models.Region>
@{
    ViewBag.Title = "Home Page";
    
}

<div class="jumbotron">
    <h1>AES</h1>
    <p class="lead">Sales pitch goes here.</p>
</div>

<center>
    @using (Html.BeginForm("Index", "OpenJob", FormMethod.Get))
    {
       <fieldset>
            Select region: <select name="SelectedRegion" >           
                @foreach (var item in Model)
                {
                    <option value=@item.regionId>@item.regionName</option>
                }
            </select>      
           
           <p></p>
            <p>
                <input type="submit" value="View Job Openings" class="btn btn-success icon-zoom-in icon-white" />
            </p>            
        </fieldset>  
    }
</center>
         


